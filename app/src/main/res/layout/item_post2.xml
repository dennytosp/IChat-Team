<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="47dp"
                android:layout_height="47dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="20.8dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="0.5dp"
                    android:src="@drawable/hn"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="2.5dp" />

            </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="25.9dp"
            android:layout_weight="1"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2.6sp"
                    android:text="Hậu Nguyễn"
                    android:fontFamily="@font/regular"
                    android:textColor="#0d0e15"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2.1sp"
                    android:text="5 days ago"
                    android:textColor="#768196"
                    android:fontFamily="@font/regular"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/tvName"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_menu"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"/>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:text="Chủ nhật chỉ muốn thế này thôi!"
        android:textColor="#131314"
        android:fontFamily="@font/regular"
        android:textSize="14dp" />

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/hn1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginTop="8dp"
            android:background="#C1BDBD"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_heart"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"/>

        <customfonts.MyTextView_Arial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7.3dp"
            android:lineSpacingExtra="2.6sp"
            android:text="5"
            android:textColor="#0d0e15"
            android:textSize="13.4sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_comment"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            app:tint="@color/gray"/>

        <customfonts.MyTextView_Arial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7.3dp"
            android:lineSpacingExtra="2.6sp"
            android:text="2"
            android:textColor="#0d0e15"
            android:layout_marginRight="50dp"
            android:textSize="13.4sp" />

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_share"
            android:layout_gravity="center"
            app:tint="@color/gray"
            android:layout_marginLeft="116dp"/>

        <customfonts.MyTextView_Arial
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7.3dp"
            android:lineSpacingExtra="2.6sp"
            android:text="0"
            android:textColor="#0d0e15"
            android:textSize="13.4sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
